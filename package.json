{
    "name": "root",
    "private": true,
    "scripts": {
        "lerna:clean": "lerna clean -y",
        "clean": "rm -rf packages/*/{lib,dist,tsconfig.tsbuildinfo}",
        "start": "sirv public --no-clear --port=6001",
        "dev": "tsc --build --watch",
        "build": "cross-env NODE_ENV=production && npm run clean && tsc --build && node scripts/process.mjs && rollup -c",
        "postinstall": "node scripts/postinstall.mjs"
    },
    "workspaces": [
        "packages/**"
    ],
    "devDependencies": {
        "@babel/core": "^7.16.0",
        "@babel/plugin-transform-runtime": "^7.16.0",
        "@babel/preset-env": "^7.16.0",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.0.6",
        "@rollup/plugin-replace": "^3.0.0",
        "@rollup/plugin-typescript": "^8.3.0",
        "@tsconfig/svelte": "^2.0.1",
        "@vue/compiler-sfc": "^3.2.21",
        "chokidar": "^3.5.2",
        "cross-env": "^7.0.3",
        "fs-extra": "^10.0.0",
        "glob": "^7.2.0",
        "lerna": "^4.0.0",
        "less": "^4.1.2",
        "lodash": "^4.17.21",
        "mustache": "^4.2.0",
        "rollup": "^2.59.0",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-svelte": "^7.1.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-vue": "^6.0.0",
        "sirv-cli": "^1.0.14",
        "svelte-preprocess": "^4.9.8",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "svelte": "^3.44.1"
    },
    "packageManager": "pnpm"
}
